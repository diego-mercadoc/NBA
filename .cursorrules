                    "ORtg", "DRtg", "Pace", "SRS",
                    "eFG_Pct", "TOV_Pct", "ORB_Pct", "FT_Rate"
                ],
                "alternative_tables": [
                    "misc_stats",
                    "per_game_stats",
                    "advanced_stats"
                ],
                "parsing_options": {
                    "try_all_tables": true,
                    "handle_multiindex": true,
